; MLT3 PIO program for 100Base-TX output
;
; PIO SM needs to run at 250 MHz PIO clock, 2 cycles per bit resulting
; in 125 MHz output
;

.pio_version 0
.program mlt3_output
.side_set 2

public entry_point:

	; clear x
	mov x, null		side 0

.wrap_target
	null1:
		out x, 1	side 0
		jmp !x null1	side 0
	plus:
		out x, 1	side 1
		jmp !x plus	side 1
	null2:
		out x, 1	side 0
		jmp !x null2	side 0
	minus:
		out x, 1	side 2
		jmp !x minus	side 2
.wrap

% c-sdk {
static inline void mlt3_output_program_init(PIO pio, uint sm, uint offset, uint pin)
{
	pio_sm_config c = mlt3_output_program_get_default_config(offset);

	// configure pos and neg pin for side-set
	sm_config_set_sideset_pins(&c, pin);
	sm_config_set_sideset(&c, 2, false, false);

	pio_sm_set_consecutive_pindirs(pio, sm, pin, 2, true);
	pio_gpio_init(pio, pin);
	pio_gpio_init(pio, pin+1);

	sm_config_set_in_shift(
		&c,
		false,	// Shift-to-right = false (i.e. shift to left)
		false,	// Autopush disabled
		32	// Autopush threshold: ignored
	);

	sm_config_set_out_shift(
		&c,
		false,	// Shift-to-right = false (i.e. shift to left)
		true,	// Autopull enabled
		30	// Autopull threshold, six 5 bit symbols per word
	);

	// We only transmit, so disable the RX FIFO to make the TX FIFO deeper.
	sm_config_set_fifo_join(&c, PIO_FIFO_JOIN_TX);

	// We need to run at 250 MHz
	sm_config_set_clkdiv(&c, 1.f);

	// Load our configuration, and start the program from the beginning
	pio_sm_init(pio, sm, offset, &c);
//	pio_sm_set_enabled(pio, sm, true);
}
%}
